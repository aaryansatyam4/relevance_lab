{
  "manifest_version": 3,
  "name": "LLM Data Leakage Monitor",
  "version": "1.0",
  "description": "Detects and blocks sensitive data using regex and MobileBERT (TensorFlow.js)",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["web_model/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
} 
